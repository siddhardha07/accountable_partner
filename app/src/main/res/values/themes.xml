<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Accountable" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/navy_blue_light</item>
        <item name="colorPrimaryDark">@color/navy_blue_dark</item>
        <item name="colorAccent">@color/primary_blue_accent</item>
        <item name="colorSecondary">@color/logo_purple</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <!-- Professional Typography -->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodyTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/gradient_primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="NumberPickerTheme">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/primary_teal</item>
    </style>

    <!-- Bottom Navigation Styles -->
    <style name="BottomNavActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_teal_light</item>
        <item name="android:alpha">0.12</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_white</item>
    </style>


</resources>
