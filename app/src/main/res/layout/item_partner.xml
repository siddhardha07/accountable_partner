<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/gradient_primary"
            android:padding="12dp"
            android:src="@drawable/ic_profile"
            android:tint="@color/surface_white"
            app:cornerRadius="25dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/partnerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partner Name"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                style="@style/HeaderTextStyle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/partnerStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Active â€¢ 5 apps monitored"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                style="@style/BodyTextStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/partnerTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12m left"
            android:textColor="@color/success_blue"
            android:textSize="12sp"
            style="@style/BodyTextStyle"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>