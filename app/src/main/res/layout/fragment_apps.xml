<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header with Search Bar and Search Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apps"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium" />

            <!-- Search Bar in Top Right -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:background="@drawable/search_background"
                app:iconifiedByDefault="false"
                app:queryHint="Search apps..."
                app:closeIcon="@drawable/ic_arrow_forward"
                app:searchIcon="@drawable/ic_apps" />

        </LinearLayout>

        <!-- Bottom Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_tertiary"
            android:alpha="0.3" />

    </LinearLayout>

    <!-- Apps RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical" />    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No apps configured yet"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            style="@style/BodyTextStyle"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add apps to start managing your digital wellness"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            style="@style/BodyTextStyle"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
